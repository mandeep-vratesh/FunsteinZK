<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_bullet_hole"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="67dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_bullet_hole"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginTop="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_bullet_hole"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BE ALERT !"
        android:id="@+id/be_alert"
        android:textColor="#950505"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/be_alert_u"
        android:text="____________"
        android:textColor="#950505"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/be_alert"
        android:layout_alignLeft="@+id/be_alert"
        android:layout_alignStart="@+id/be_alert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BE SAFE !!"
        android:id="@+id/be_safe"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        android:textColor="#108b0a"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/be_safe_u"
        android:text="____________"
        android:textColor="#950505"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/be_safe"
        android:layout_alignRight="@+id/be_safe"
        android:layout_alignEnd="@+id/be_safe"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="-10dp" />
</RelativeLayout>