<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    tools:context=".MainActivity"
    android:background="#aaa">


    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_above="@+id/under_attack"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PANIC ALERT !!!"
        android:id="@+id/under_attack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#b70d0d"
        android:elevation="10dp"
        android:layout_marginBottom="5dp" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"

        android:scrollbars="none"
        android:background="#c9cfd2f2"
        android:layout_marginTop="5dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Emergency"
                android:id="@+id/emergency_text1"
                android:minLines="1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numbers"
                android:id="@+id/emergency_text2"
                android:textStyle="bold" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/police"
                android:text="Police"
                android:ellipsize="middle"
                android:elevation="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ambulance"
                android:text="Ambulance"
                android:ellipsize="middle"
                android:elevation="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/firebrigade"
                android:text="Fire Brigade"
                android:elevation="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bloodbank"
                android:text="Blood Bank"
                android:elevation="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ats"
                android:text="Anti Terrorist Squad"
                android:elevation="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emergency_disaster_management"
                android:text="Emergency Diisaster Management"/>

        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>